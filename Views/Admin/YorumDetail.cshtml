@model Murat_Yucedag_Mvc5_TatilSeyahat_Sitesi.Models.Siniflar.Yorumlar

@{
    ViewBag.Title = "YorumDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum detayi</h2>


<html>

<body>


    @using (Html.BeginForm("YorumGuncelle", "Admin", FormMethod.Post, new { @class = "form - group" }))
    {
        @Html.LabelFor(x => x.ID)
        @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
        <br />
        @Html.LabelFor(x => x.BlogID)
        @Html.TextBoxFor(x => x.BlogID, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Blog.Baslik, "Blog basligi")
        @Html.TextBoxFor(x => x.Blog.Baslik, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.KullaniciAdi)
        @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Mail)
        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Yorum)
        @Html.TextAreaFor(x => x.Yorum, 8, 1, new { @class = "form-control" })
        <br />

        <button class="
                btn btn-primary
        @*btn btn-succes*@
                ">Güncelle</button>


    }


</body>
</html>
